@{
}

@model IEnumerable<RPGCharacterBuilderMVC.Models.MagicItem.MagicItemIndexModel>

<h1 class="text-center">All Magic Items</h1>
<a href="/magicItem/create" class="text-primary">Create Magic Item</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Id</th>
            <th>Character Id</th>
            <th>Name</th>
            <th>Type</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var magicItem in Model)
    {
        <tr>
            <td>@magicItem.Id</td>
            <td>@magicItem.CharacterId</td>
            <td>@magicItem.Name</td>
            <td>@magicItem.Type</td>
        </tr>
    }
    </tbody>
</table>