@{
}

@model IEnumerable<RPGCharacterBuilderMVC.Models.Armor.ArmorIndexModel>

<h1 class="text-center">All Armor</h1>
<a href="/armor/create" class="text-primary">Create Armor</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Id</th>
            <th>Character Id</th>
            <th>Name</th>
            <th>Type</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var armor in Model)
    {
        <tr>
            <td>@armor.Id</td>
            <td>@armor.CharacterId</td>
            <td>@armor.Name</td>
            <td>@armor.Type</td>
        </tr>
    }
    </tbody>
</table>
