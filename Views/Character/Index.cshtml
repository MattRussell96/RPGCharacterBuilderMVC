@{
}

@model IEnumerable<RPGCharacterBuilderMVC.Models.Character.CharacterIndexModel>

<h1 class="text-center">All Characters</h1>
<a href="/character/create" class="text-primary">Create Character</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Id</th>
            <th>Character Id</th>
            <th>Name</th>            
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var character in Model)
    {
        <tr>
            <td>@character.Id</td>
            <td>@character.CharacterId</td>
            <td>@character.Name</td>
        </tr>
    }
    </tbody>
</table>